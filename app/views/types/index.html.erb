<br/><p id="notice"><%= notice %></p>

<h1>Table des types d'action</h1>
<em>
  Cette table contient les différents types d'actions.
</em>

<hr/>
<%= link_to 'Ajouter un nouveau type d\'action', new_type_path %>
<hr/>

<h3>Effectuer une recherche</h3><br/>
<%= form_tag(types_path, method: :get) do %>

  <div class="field">
    Mot-clé cherché dans le titre et la description :
    <%= text_field_tag :search, params[:search], size: '30', placeholder: 'Aucun mot-clé' %>
  </div>

  <div class="actions">
    <%= submit_tag 'Rechercher', name: nil %>
  </div>

<% end %><br/>

<%= link_to 'Annuler la recherche', types_path %><br/><br/>

<table class="table table-striped table-bordered table-hover" style="max-width: 50%">
  <thead>
    <tr>
      <th>Titre</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.title %></td>
        <td><%= type.description %></td>
        <td>
          <%= link_to 'Editer', edit_type_path(type) %><br/>
          <%= link_to 'Supprimer', type, method: :delete, data: { confirm: 'Etes-vous sûr ? Attention : La suppression de ce type d\'action est irréversible et suprimera toutes les actions associées.' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
