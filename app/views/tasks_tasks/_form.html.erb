<%= form_with(model: tasks_task, local: true) do |form| %>

  <% part = request.path_info.split("/")[4] %>
  <% if part == 'edit' %>
    <%-# This is an existing task link. -%>
    <h2>Lien entre "<%= @tasks_task.ref.title %>" - "<%= @tasks_task.dep.title %>"</h2>
    <%-# No <h2> title if this is a new task link. -%>
  <% end %>

  <% if tasks_task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tasks_task.errors.count, "erreur identifiée", "erreurs identifiées") %> :</h2>

      <ul>
      <% tasks_task.errors.messages.values.each do |message| %>
        <li><%= message[0] %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <hr/><h3>Information sur le lien</h3><br/>
  
  <div class="field">
    Tâche de base (Action - Thème)* : <br/>
    <% tasks = Task.all %>
    <% taskoptions = Array.new %>
    <% taskselected = '' %>
    <% tasks.each do |task| %>
      <% possibilities = task.title + ' (' + task.action.title + ' - ' + task.action.theme.title + ')' %>
      <% taskarray = [possibilities, task.id] %>
      <% taskoptions.push(taskarray) %>
    <% end %>
    <% if part == 'edit' %>
      <%= form.select :ref_id, options_for_select(taskoptions, selected: tasks_task.ref.id), id: :tasks_task_ref_id %>
    <% else %>
      <% taskoptions.unshift(['Choisir']) %>
      <%= form.select :ref_id, options_for_select(taskoptions), id: :tasks_task_ref_id %>
    <% end %>
  </div>

  <div class="field">
    Tâche requise pour faire la tâche de base (Action - Thème)* : <br/>
    <% tasks = Task.all %>
    <% taskoptions = Array.new %>
    <% taskselected = '' %>
    <% tasks.each do |task| %>
      <% possibilities = task.title + ' (' + task.action.title + ' - ' + task.action.theme.title + ')' %>
      <% taskarray = [possibilities, task.id] %>
      <% taskoptions.push(taskarray) %>
    <% end %>
    <% if part == 'edit' %>
      <%= form.select :dep_id, options_for_select(taskoptions, selected: tasks_task.dep.id), id: :tasks_task_dep_id %>
    <% else %>
      <% taskoptions.unshift(['Choisir']) %>
      <%= form.select :dep_id, options_for_select(taskoptions), id: :tasks_task_dep_id %>
    <% end %>
  </div>

  <hr/>
  <h6>* Champs obligatoires</h6>
  <div class="actions">
    <%= form.submit 'Enregistrer' %>
  </div>
<% end %>