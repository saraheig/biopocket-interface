<p id="notice"><%= notice %></p>

<h1>Lien entre "<%= @species_action.action.title %>" - "<%= @species_action.species.name %>"</h1>

<hr/>
<%= link_to 'Voir tous les liens entre actions et espèces', species_actions_path %>
<hr/>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Action (Thème - Code du thème)</th>
      <th>Espèce touchée par l'action</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @species_action.action.title %> (<%= @species_action.action.theme.title %> - <%= @species_action.action.theme.code %>)</td>
      <td><%= @species_action.species.name %></td>
      <td>
        <%= link_to 'Editer', edit_species_action_path(@species_action) %><br/>
        <%= link_to 'Supprimer', @species_action, method: :delete, data: { confirm: 'Etes-vous sûr ? Attention : La suppression de ce lien est irréversible.' } %>
      </td>
    </tr>
  </tbody>
</table>