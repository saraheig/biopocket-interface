<%= form_with(model: cost, local: true) do |form| %>

  <%-# The part variable: to know if this is a new or an existing cost which is modified (see below) -%>
  <% part = request.path_info.split("/")[4] %>
  <%-# Add a title according if this is a new or an existing cost -%>
  <% if part == 'edit' %>
    <%-# This is an existing cost. -%>
    <h2>Coût "<%= cost.title %>"</h2>
    Action "<%= @cost.action.title %>" (Thème "<%= @cost.action.theme.title %>")
    <%-# No <h2> title if this is a new cost. -%>
  <% end %>

  <% if cost.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cost.errors.count, "erreur identifiée", "erreurs identifiées") %> :</h2>

      <ul>
      <% cost.errors.messages.values.each do |message| %>
        <li><%= message[0] %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <hr/><h3>Information sur le coût</h3><br/>

  <div class="field">
    Titre* : <br/>
    <%= form.text_field :title, id: :cost_title, size: '43.5' %>
  </div>

  <div class="field">
    Coût minimum* : <br/>
    <%= form.text_field :value_min, id: :cost_value_min, size: '43.5' %>
  </div>

  <div class="field">
    Coût maximum* : <br/>
    <%= form.text_field :value_max, id: :cost_value_max, size: '43.5' %>
  </div>

  <div class="field">
    Unité (pour les coûts)* : <br/>
    <%= form.text_field :unit, id: :cost_unit, size: '43.5' %>
  </div>

  <div class="field">
    Action (Thème)* : <br/>
    <% actions = Action.all %>
    <% actionoptions = Array.new %>
    <% actionselected = '' %>
    <% actions.each do |action| %>
      <% possibilities = action.title + ' (' + action.theme.title + ')' %>
      <% actionarray = [possibilities, action.id] %>
      <% actionoptions.push(actionarray) %>
    <% end %>
    <% if part == 'edit' %>
      <%= form.select :action_id, options_for_select(actionoptions, selected: cost.action.id), id: :cost_action_id %>
    <% else %>
      <%-# If this is a new cost, there is no default value selected in the select form. -%>
      <% actionoptions.unshift(['Choisir']) %>
      <%= form.select :action_id, options_for_select(actionoptions), id: :cost_action_id %>
    <% end %>
    <%= link_to 'Créer une nouvelle action', new_action_path %>
  </div>
  
  <hr/>
  <h6>* Champs obligatoires</h6>
  <div class="actions">
    <%= form.submit 'Enregistrer' %>
  </div>
<% end %>
